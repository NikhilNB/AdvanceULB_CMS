@model AdvanceULB_CMS.Models.Accounts
@{
    Layout = null;
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl7/1O3Wzq3v8S2kqg88e3voIxY4Fnf3HYNh7EmA6F" crossorigin="anonymous">

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ULB Login Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .bg {
            background-image: url("https://media.istockphoto.com/id/882286616/vector/containers-for-garbage-of-different-types-on-autumn-street-city.jpg?s=2048x2048&w=is&k=20&c=AqbvZxfOUHEaNzEKILGPAImcFdMBF7DF4VSrrOBPfYc=");
            height: 100%;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .login-container {
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-modal {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 80px 100px;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0,0,0,.6);
            width: auto;
        }

        .form-control, .btn-login {
            border-radius: 30px;
            font-size: 18px;
        }

        .btn-login {
            background-color: #007bff;
            border: none;
            padding: 15px 30px;
            color: white;
            font-weight: 600;
            transition: background-color 0.2s;
        }

            .btn-login:hover {
                background-color: #0056b3;
            }

        .form-group {
            margin-bottom: 25px;
        }
    </style>
</head>
<body>

    <div class="bg">
        <div class="login-container">
            <div class="login-modal">
                <h2 class="text-center mb-5"> ULB Login</h2>
                <form action="/Login/CheckLogin" method="post">
                    <div class="form-group mb-4">
                        <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                    </div>
                    <div class="form-group mb-5">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-login btn-lg">Login</button>
                    </div>
                    <div class="text-center mt-4">
                        <a href="#" class="text-decoration-none">Forgot Password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>