@model IEnumerable<AdvanceULB_CMS.Models.PropertyCounts>

@{
    ViewData["Title"] = "GetAppDetailsDataList";
}

<div class="container mt-5">
    <form method="get" action="/ULB/GetAppDetailsDataList" class="mb-4">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="server" class="form-label">Server:</label>
                <input type="text" id="server" name="server" class="form-control" required>
            </div>
            <div class="col-md-6 mb-3">
                <label for="appId" class="form-label">App ID:</label>
                <input type="text" id="appId" name="appId" class="form-control" required>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Get Data</button>
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>App ID</th>
                        <th>API Hit</th>
                        <th>ULB Property</th>
                        <th>Add ULB Property</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.appId</td>
                            <td>@item.apiHit</td>
                            <td>@item.ulbProperty</td>
                            <td>@item.addUlbProperty</td>
                            <td><a href="@Url.Action("Update", "ULB", new { appId = item.appId, server = item.server })" class="btn btn-sm btn-primary">Update</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No data available.</p>
    }
</div>
